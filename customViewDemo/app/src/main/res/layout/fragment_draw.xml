<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DrawFragment"
    android:orientation="horizontal"
    android:id="@+id/drawFragId"
    android:padding="50dp"
    android:layout_alignParentStart="true">

    <com.example.customviewdemo.CustomView
        android:id="@+id/customView"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" />
    <Button
        android:id="@+id/blueButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"

        android:backgroundTint="#0057D2"
        android:text="@string/blue" />
<!--        android:layout_gravity="right"
style="?android:attr/buttonBarButtonStyle"
android:layout_marginTop="20dp"-->
    <Button
        android:id="@+id/greenButton"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/blueButton"
        android:backgroundTint="#97DD40"
        android:text="@string/green" />
<!--    android:layout_gravity="left"
        style="?android:attr/buttonBarButtonStyle"-->
    <Button
        android:id="@+id/redButton"
        android:layout_width="80dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/greenButton"
        android:layout_height="wrap_content"
        android:backgroundTint="#D20A0A"
        android:text="@string/red" />
<!--    android:layout_gravity="center_horizontal"-->
<!--    style="?android:attr/buttonBarButtonStyle"-->

    <Button
        android:id="@+id/roundButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:backgroundTint="#000000"
        android:text="@string/round_tip"
        android:textColor="#FFFFFF"/>
<!--    android:layout_gravity="center_vertical"-->
<!--    style="?android:attr/buttonBarButtonStyle"
android:layout_marginTop="150dp"-->

    <Button
        android:id="@+id/squareButton"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@id/roundButton"
        android:backgroundTint="#000000"
        android:text="@string/square_tip"
        android:textColor="#FFFFFF"/>
<!--    style="?android:attr/buttonBarButtonStyle"-->
<!--    android:layout_gravity="center"-->

    <Button
        android:id="@+id/increaseSizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:backgroundTint="#1E592F"
        android:drawablePadding="20dp"
        android:text="@string/pen_tipsize"
       />
<!--    android:layout_gravity="bottom|center_horizontal"-->
<!--    style="?android:attr/buttonBarButtonStyle"-->

    <Button
        android:id="@+id/decreaseSizeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@id/increaseSizeButton"
        android:backgroundTint="#DF1278"

        android:text="@string/pen_tip_size" />

    <Button
        android:id="@+id/savePaintingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#000000"
        android:layout_alignParentBottom="true"
        android:text="@string/save"
        android:textColor="#FFFFFF"/>

</RelativeLayout>